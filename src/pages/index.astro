---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '../style/main.css';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	

	<body>
		<Header title={SITE_TITLE} />
	    <main>
			<h1>🧑‍🚀🧑‍🚀🧑‍🚀</h1>
			<div class="hero">
				<h2>Unlock Your Digital Destiny with Jobs4Engineer</h2>
				<p>Embark on a journey through the ever-evolving IT industry. Explore the latest job applications, career insights, and opportunities that await you.</p>
				<a href="./blog" class="btn">Explore Now</a>
			</div>
		</main>
	
		<Footer />
	</body>
</html>
