---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import "../style/main.css";
---

<!doctype html>
<html lang="en">
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  <style>
    /* Common styles for header */
    header {
      background-color: #333;
      color: white;
      padding: 1em;
      text-align: center;
    }

    /* Common styles for main content */
    main {
      padding: 2em;
      text-align: center;
    }

    h1 {
      font-size: 2em;
    }

    .hero {
      margin-top: 2em;
    }

    h2 {
      font-size: 1.5em;
    }

    p {
      font-size: 1em;
    }

    .btn {
      display: inline-block;
      padding: 0.5em 1em;
      background-color: #333;
      color: white;
      text-decoration: none;
      font-size: 1em;
      margin-top: 1em;
      border-radius:25px;
    }
    .btn:hover {
      background-color: #555; /* Change the background color on hover */
      
    }

    /* Responsive styles */
    @media (max-width: 768px) {
      h1 {
        font-size: 1.5em;
      }

      .hero {
        margin-top: 1em;
      }

      h2 {
        font-size: 1.2em;
      }

      p {
        font-size: 0.9em;
      }

      .btn {
        font-size: 0.9em;
      }
    }
  </style>


  <body>
    <Header title={SITE_TITLE} />
    <main>
      <h1>üßë‚ÄçüöÄüßë‚ÄçüöÄüßë‚ÄçüöÄ</h1>
      <div class="hero">
        <h2>Unlock Your Digital Destiny with Jobs4Engineer</h2>
        <p>
          Embark on a journey through the ever-evolving IT industry. Explore the
          latest job applications, career insights, and opportunities that await
          you.
        </p>
        <a href="./blog" class="btn">Explore Now</a>
      </div>
    </main>

    <Footer />
  </body>
</html>
